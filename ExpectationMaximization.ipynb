#Program 10: Implement the Expectation-Maximization (EM) algorithm to perform clustering on
#data with hidden variables.


import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import multivariate_normal

np.random.seed(42)
X = np.vstack((
    np.random.multivariate_normal([0,0], [[1,0],[0,1]], 50),
    np.random.multivariate_normal([5,5], [[1,0],[0,1]], 50)
))
n_samples, n_features = X.shape
k = 2
means = np.random.rand(k, n_features) * 5
covs = np.array([np.eye(n_features)] * k)
weights = np.ones(k) / k


for it in range(10):
    resp = np.zeros((n_samples, k))
    for i in range(k):
        resp[:, i] = weights[i] * multivariate_normal.pdf(X, means[i], covs[i])
    resp /= resp.sum(axis=1, keepdims=True)
    for i in range(k):
        Nk = resp[:, i].sum()
        means[i] = (resp[:, i][:, None] * X).sum(axis=0) / Nk
        diff = X - means[i]
        covs[i] = (resp[:, i][:, None] * diff).T @ diff / Nk
        weights[i] = Nk / n_samples

    plt.scatter(X[:,0], X[:,1], c=np.argmax(resp, axis=1))
    plt.scatter(means[:,0], means[:,1], c='red', marker='x', s=100)
    plt.title(f"Iteration {it+1}")
    plt.show()
clusters = np.argmax(resp, axis=1)
print("Final cluster assignments:", clusters)

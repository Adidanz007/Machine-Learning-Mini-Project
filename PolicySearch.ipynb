#Program 12: Implement policy search using a simple reinforcement learning environment to
#learn optimal decision-making.


import numpy as np
import gymnasium as gym

env = gym.make("FrozenLake-v1", is_slippery=True)

n_states = env.observation_space.n
n_actions = env.action_space.n
policy = np.ones((n_states, n_actions)) / n_actions
episodes = 5000
lr = 0.1
gamma = 0.99

for ep in range(episodes):
    state = env.reset(seed=ep)[0]
    done = False
    states, actions, rewards = [], [], []
    while not done:
        action = np.random.choice(n_actions, p=policy[state])
        next_state, reward, done, _, _ = env.step(action)
        states.append(state)
        actions.append(action)
        rewards.append(reward)
        state = next_state
    G = 0
    for t in reversed(range(len(rewards))):
        G = gamma * G + rewards[t]
        s, a = states[t], actions[t]
        policy[s, a] += lr * G
        policy[s] = np.maximum(policy[s], 0)
        policy[s] /= policy[s].sum()
tests = 100
success = 0


for ep in range(tests):
    state = env.reset(seed=ep)[0]
    done = False
    while not done:
        action = np.argmax(policy[state])
        state, reward, done, _, _ = env.step(action)
        success += reward

print(f"Success rate over {tests} episodes: {success/tests:.2f}")
actions = ["←","↓","→","↑"]
print("\nLearned Policy:")
for s in range(n_states):
    print(f"State {s}: {actions[np.argmax(policy[s])]}")
